# AI Mentor Backend Configuration
# Copy this file to .env and adjust values as needed

# API Settings
DEBUG=false
APP_NAME=AI Mentor API
APP_VERSION=1.0.0

# LLM Server (llama.cpp OpenAI-compatible server)
LLM_BASE_URL=http://localhost:8080/v1
LLM_MODEL_NAME=mistral-7b-instruct-v0.2.Q5_K_M.gguf
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512

# Embeddings (GPU-accelerated sentence-transformers)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ChromaDB Vector Database (file-based, no Docker needed)
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=course_materials

# RAG Configuration
CHUNK_SIZE=256
CHUNK_OVERLAP=25
TOP_K_RETRIEVAL=1
SIMILARITY_THRESHOLD=0.7

# File Paths
COURSE_MATERIALS_DIR=./course_materials
MODELS_DIR=./models

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# Session Management
SESSION_SECRET_KEY=change-this-to-a-random-secret-key-in-production
SESSION_EXPIRY_SECONDS=3600
